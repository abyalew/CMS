@model List<CMS.Business.Dtos.TeacherDto>
@{
    ViewBag.Title = "Teachers";
}


<div class="page-header">
    <h1>Teachers</h1>
    @Html.ActionLink("Create", $"Edit", null, new { @class = "btn btn-info" })
</div>

<div>
    <table  class="table table-bordered table-condensed table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Birthday</th>
                <th>Salary</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model) {
            <tr>
                <td>@t.Name</td>
                <td>@t.Birthday</td>
                <td>@t.Salary</td>
                <td>
                    @Html.ActionLink("Edit", $"Edit/{t.Id}", null, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", $"Delete/{t.Id}", null, new { @class = "btn btn-danger" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>