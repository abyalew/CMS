@model List<CMS.Host.ViewModels.AdmissionViewModel>
@{
    ViewBag.Title = "Students";
}


<div class="page-header">
    <h1>Students</h1>
    @Html.ActionLink("Create", $"Edit", null, new { @class = "btn btn-info" })
</div>

<div>
    <table  class="table table-bordered table-condensed table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Registration No.</th>
                <th>Student</th>
                <th>Course</th>
                <th>Subject Grade</th>
                <th>Course Grade</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model) {
            <tr>
                <td>@s.RegistrationNo</td>
                <td>@s.StudentName</td>
                <td>@s.CourseName</td>
                <td>
                    <ul>
                        @foreach (var sg in s.StudentGrades)
                        {
                            <li>@sg.Subject.Name: @sg.Grade </li>
                        }
                    </ul>
                </td>
                <td>--</td>
                <td>@Html.ActionLink("Edit Grade", $"EditGrade/{s.RegistrationNo}", null, new { @class = "btn btn-info btn-sm" })</td>
            </tr>
            }
        </tbody>
    </table>
</div>