@using CMS.Host.ViewModels;
@model StudentViewModel
<div class="page-header">
    <h1>Edit Student</h1>
</div>
@using (Html.BeginForm())
{
    <div class="form-group row hidden">
        @Html.LabelFor(m => m.StudentId, new { @class = "col-sm-1" })
        @Html.TextBoxFor(m => m.StudentId, new { @class = "form-control col-sm-4" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.StudentName, new { @class = "col-sm-1" })
        @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control col-sm-4" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.CourseId, new { @class = "col-sm-1" })
        @Html.ListBoxFor(m => m.CourseId, Model.CourseSelectList, new { id = "SubjectList", @class = "selectSubject show-tick form-control col-sm-4" })                                       })
    </div>

    <button type="submit" class="btn btn-sm btn-success">Save</button>
}
