@model CMS.Host.ViewModels.AdmissionEditorViewModel
<div class="page-header">
    <h1>Edit Student</h1>
</div>
@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(m => m.RegistrationNo, new { @class = "col-sm-2" })
        @Html.TextBoxFor(m => m.RegistrationNo, new { @class = "form-control col-sm-4 disabled" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.StudentName, new { @class = "col-sm-2" })
        @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control col-sm-4" })
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.CourseId, new { @class = "col-sm-2" })
        @Html.ListBoxFor(m => m.CourseId, Model.CourseSelectList, new { id = "CourseList", @class = "selectCourse show-tick form-control col-sm-4" }) 
    </div>

    <button type="submit" class="btn btn-sm btn-success">Save</button>
}
