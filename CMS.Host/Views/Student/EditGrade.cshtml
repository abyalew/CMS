@model CMS.Host.ViewModels.AdmissionViewModel
@{
    ViewBag.Title = "Student Grade Editor";
}


@using (Html.BeginForm())
{
    <div class="page-header">
        <h1>Student Grade</h1>
        <button type="submit" class="btn btn-sm btn-success">Save</button>
    </div>
    @Html.HiddenFor(m=>m.RegistrationNo)
    <div>
        <table class="table table-bordered table-condensed table-responsive table-hover table-striped">
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Credit Point</th>
                    <th width="40%">Grade</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.StudentGrades.Count(); i++)
                {
                    <tr>
                        <td>@Model.StudentGrades[i].Subject.Name</td>
                        <td>@Model.StudentGrades[i].Subject.CreditPoint</td>
                        <td>
                            @Html.HiddenFor(m => m.StudentGrades[i].Id)
                            @Html.HiddenFor(m => m.StudentGrades[i].SubjectId)
                            @Html.TextBoxFor(m => m.StudentGrades[i].Grade, new { @class = "form-control col-sm-4" })
                            <div>
                                @Html.ValidationMessageFor(m => m.StudentGrades[i].Grade, null, new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
