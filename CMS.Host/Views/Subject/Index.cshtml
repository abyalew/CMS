@model List<CMS.Business.Dtos.SubjectDto>
@{
    ViewBag.Title = "Subjects";
}


<div class="page-header">
    <h1>Subjects</h1>
    @Html.ActionLink("Create", $"Edit", null, new { @class = "btn btn-info" })
</div>

<div>
    @if (Model.Count == 0)
    {
        <text>No Data</text>
    }
    else
    {
        <table class="table table-bordered table-condensed table-responsive table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Credit Point</th>
                    <th>Teacher</th>
                    <th>No. of Students</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td>@c.CreditPoint</td>
                        <td>@c.Teacher.Name</td>
                        <td>@c.NumberOfStudents</td>
                        <td>
                            @Html.ActionLink("Edit", $"Edit/{c.Id}", null, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Delete", $"Delete/{c.Id}", null, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>