@model List<CMS.Business.Dtos.CourseViewDto>
@{
    ViewBag.Title = "Courses";
}


<div class="page-header">
    <h1>Courses</h1>
    @Html.ActionLink("Create", $"Edit", null, new { @class = "btn btn-info" })
</div>

<div>
    @if (Model.Count == 0)
    {
        <text>No Data</text>
    }
    else
    {
        <table class="table table-bordered table-condensed table-responsive table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Teachers</th>
                    <th>Students</th>
                    <th>Average Grade</th>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                <tr>
                    <td>@c.AwardTitle</td>
                    <td>@c.NumberOfTeachers</td>
                    <td>@c.NumberOfStudents</td>
                    <td>@c.AverageGrade</td>
                    <td>
                        @Html.ActionLink("Edit", $"Edit/{c.Id}", null, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Delete", $"Delete/{c.Id}", null, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
                }
            </tbody>
        </table>

    }
</div>